generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id              String           @id @default(cuid())
  name            String
  category        String
  price           Float
  rating          Float?
  stock           Int              @default(0)
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  reviews         Review[]
  salesData       SalesData[]
  competitorData  CompetitorData[]
}

model Review {
  id            String   @id @default(cuid())
  productId     String
  product       Product  @relation(fields: [productId], references: [id])
  rating        Int
  comment       String?
  date          DateTime @default(now())
  sentiment     String?  // Optional: For pre-calculated sentiment
}

model CompetitorData {
  id              String   @id @default(cuid())
  productId       String
  product         Product  @relation(fields: [productId], references: [id])
  competitorName  String
  competitorPrice Float
  features        Json?    // Array of strings or object
  rating          Float?
  updatedAt       DateTime @updatedAt
}

model SalesData {
  id          String   @id @default(cuid())
  productId   String
  product     Product  @relation(fields: [productId], references: [id])
  unitsSold   Int
  revenue     Float
  date        DateTime @default(now())
}

model ResearchSession {
  id        String   @id @default(cuid())
  query     String
  result    Json
  createdAt DateTime @default(now())
  prefs     Json?    // User preferences for this session (margins vs growth)
}
