generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String            @id @default(cuid())
  email            String            @unique
  password         String
  name             String?
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  products         Product[]
  conversations    Conversation[]
  researchSessions ResearchSession[]
  trainingExamples TrainingExample[]
  usageRecords     UsageRecord[]
}

model UsageRecord {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id])
  type            String   // "chat" or "embedding"
  model           String   // e.g., "gemini-2.0-flash"
  promptTokens    Int
  completionTokens Int
  totalTokens     Int
  cost            Float    // Calculated cost in USD
  provider        String   // "google" or "openai"
  createdAt       DateTime @default(now())

  @@index([userId])
  @@index([createdAt])
}

model Product {
  id              String           @id @default(cuid())
  userId          String?          // Made optional for migration
  user            User?            @relation(fields: [userId], references: [id])
  name            String
  category        String
  price           Float
  rating          Float?
  stock           Int              @default(0)
  cost            Float?           
  reorderPoint    Int?             
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  reviews         Review[]
  salesData       SalesData[]
  competitorData  CompetitorData[]

  @@index([userId])
  @@index([category])
  @@index([updatedAt])
}

model Review {
  id            String   @id @default(cuid())
  productId     String
  product       Product  @relation(fields: [productId], references: [id])
  rating        Int
  comment       String?
  date          DateTime @default(now())
  sentiment     String?  
}

model CompetitorData {
  id              String   @id @default(cuid())
  productId       String
  product         Product  @relation(fields: [productId], references: [id])
  competitorName  String
  competitorPrice Float
  features        Json?    
  rating          Float?
  updatedAt       DateTime @updatedAt

  @@index([productId])
}

model SalesData {
  id          String   @id @default(cuid())
  productId   String
  product     Product  @relation(fields: [productId], references: [id])
  unitsSold   Int
  revenue     Float
  date        DateTime @default(now())

  @@index([productId])
  @@index([date])
}

model ResearchSession {
  id        String   @id @default(cuid())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  query     String
  result    Json
  createdAt DateTime @default(now())
  prefs     Json?    
}

model Conversation {
  id           String    @id @default(cuid())
  userId       String?
  user         User?     @relation(fields: [userId], references: [id])
  title        String    
  persona      String    @default("growth") 
  mode         String    @default("quick")  
  totalQueries Int       @default(0)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  messages     Message[]

  @@index([createdAt])
}

model Message {
  id             String       @id @default(cuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  
  role           String       
  content        String       @db.Text
  
  query          String?      @db.Text
  mode           String?
  persona        String?
  
  sources        Json?        
  clarifications Json?        
  
  wasHelpful     Boolean?     
  userFeedback   String?      @db.Text 
  selectedRefinement String?   
  
  createdAt      DateTime     @default(now())
  
  @@index([conversationId])
  @@index([createdAt])
}

model TrainingExample {
  id        String   @id @default(cuid())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  
  query     String   @db.Text
  context   Json     
  persona   String
  mode      String
  
  response  String   @db.Text
  
  wasHelpful Boolean  @default(false)
  userFeedback String? @db.Text
  
  embedding  Json?    
  createdAt  DateTime @default(now())
  
  @@index([wasHelpful])
  @@index([createdAt])
  @@index([persona, mode])
}
